// キーの座標変換に使うマクロ（RC(row, column) など）を読み込み
#include <dt-bindings/zmk/matrix_transform.h>

// 物理レイアウトの構造を記述するためのベース定義ファイルをインクルード
#include <physical_layouts.dtsi>

/ {
    // 使用する物理レイアウト（physical_layout0）を選択肢として指定
    chosen {
        zmk,physical-layout = &physical_layout0;
    };

    // 実際の物理レイアウトの定義
    physical_layout0: physical_layout0 {
        compatible = "zmk,physical-layout";  // ZMKが物理レイアウトとして認識するための互換名
        display-name = "SPARKLE Keyboard";  // GUI表示などでのキーボード名
        kscan = <&kscan0>;  // スキャン対象のキーマトリクスノード
        transform = <&default_transform>;  // 論理キー→物理キーの変換ルールを指定

        // 各キーの物理的な位置とサイズを定義（キースイッチ単位）
        // フォーマット: <幅 高さ X座標 Y座標 回転角度 回転基準X 回転基準Y>
        keys
            //左側
            = <&key_physical_attrs 100 100    0    0       0     0     0>  // 1列目, 1行目
            , <&key_physical_attrs 100 100  100    0       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  200    0       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  300    0       0     0     0>  // 4列目, 1行目
            , <&key_physical_attrs 100 100  400    0       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  500    0       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  600    0       0     0     0>  // 4列目, 1行目

            , <&key_physical_attrs 100 100    0    100       0     0     0>  // 1列目, 1行目
            , <&key_physical_attrs 100 100  100    100       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  200    100       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  300    100       0     0     0>  // 4列目, 1行目
            , <&key_physical_attrs 100 100  400    100       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  500    100       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  600    100       0     0     0>  // 4列目, 1行目

            , <&key_physical_attrs 100 100    0    200       0     0     0>  // 1列目, 1行目
            , <&key_physical_attrs 100 100  100    200       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  200    200       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  300    200       0     0     0>  // 4列目, 1行目
            , <&key_physical_attrs 100 100  400    200       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  500    200       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  600    200       0     0     0>  // 4列目, 1行目


            //右側
            = <&key_physical_attrs 100 100  800    0       0     0     0>  // 1列目, 1行目
            , <&key_physical_attrs 100 100  900    0       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  1000    0       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  1100    0       0     0     0>  // 4列目, 1行目
            , <&key_physical_attrs 100 100  1200    0       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  1300    0       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  1400    0       0     0     0>  // 4列目, 1行目

            , <&key_physical_attrs 100 100  800    100       0     0     0>  // 1列目, 1行目
            , <&key_physical_attrs 100 100  900    100       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  1000    100       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  1100    100       0     0     0>  // 4列目, 1行目
            , <&key_physical_attrs 100 100  1200    100       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  1300    100       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  1400    100       0     0     0>  // 4列目, 1行目

            , <&key_physical_attrs 100 100  800    200       0     0     0>  // 1列目, 1行目
            , <&key_physical_attrs 100 100  900    200       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  1000    200       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  1100    200       0     0     0>  // 4列目, 1行目
            , <&key_physical_attrs 100 100  1200    200       0     0     0>  // 2列目, 1行目
            , <&key_physical_attrs 100 100  1300    200       0     0     0>  // 3列目, 1行目
            , <&key_physical_attrs 100 100  1400    200       0     0     0>  // 4列目, 1行目
            ;
    };

    // 行列変換ルール（キーの論理配列と物理レイアウトを一致させる）
    default_transform: keymap_transform0 {
        compatible = "zmk,matrix-transform";  // ZMKが認識できる変換形式
        columns = <14>;  // 列数：14
        rows = <3>;     // 行数：3

        // 論理行列上の位置（row-column）とキー番号を対応付け
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5) RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11) RC(0,12) RC(0,13)  // 1行目（上段）
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5) RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11) RC(1,12) RC(1,13)  // 2行目（中段）
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5) RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11) RC(2,12) RC(2,13)  // 3行目（下段）
        >;
    };

    // GPIOマトリクスによるキー入力スキャンの定義
    kscan0: kscan0 {
        compatible = "zmk,kscan-gpio-matrix";  // GPIOを用いた行列スキャン方式
        diode-direction = "col2row";  // ダイオードの向き（列→行）

        // 行ピンの定義（2本）：XIAOのD10とD9を使用
        row-gpios
            = <&xiao_d 0  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // 行0
            , <&xiao_d 1  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>  // 行1
            , <&xiao_d 2  (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>; // 行2
    };
};
